@page "/logout"
@using System.Security.Claims
@using BottleSplitter.Infrastructure
@using BottleSplitter.Services
@inject CustomAuthenticationStateProvider CustomAuthenticationStateProvider
@inject INavigationService NavigationService

<PageTitle>Logout</PageTitle>

<MudText Typo="Typo.h3">Logout</MudText>

<AuthorizeView>
    <Authorized>
        <MudAlert Severity="Severity.Info">Logging you out...</MudAlert>
    </Authorized>
    <NotAuthorized>
        <MudAlert Severity="Severity.Success">You're logged out. <MudLink Href="/login">Log in.</MudLink></MudAlert>
    </NotAuthorized>
</AuthorizeView>

@code {
    protected override async Task OnInitializedAsync()
    {
        CustomAuthenticationStateProvider.SetAuthenticationState(Task.FromResult(new AuthenticationState(new ClaimsPrincipal(new ClaimsIdentity()))));

        await Task.Delay(TimeSpan.FromSeconds(1));
        NavigationService.GoTo("/signout", true);
    }

}
