@using System.Diagnostics.CodeAnalysis
@using BottleSplitter.Model

<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudStack Row="true" Class="pa-1">
                <MudText Class="pa-2">Split:</MudText>
                <MudDivider Vertical="true"/>
                <MudText Class="pa-2">@Split.Name</MudText>
            </MudStack>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudDivider/>
        <MudStack Row="true" Class="pa-1">
            <MudText Class="pa-1">Url:</MudText>
            <MudDivider Vertical="true"/>
            <MudLink Class="pa-1" Href="@($"/splits/{Split.Squid}")">@Split.Squid</MudLink>
        </MudStack>
        <SplitItemLine Name="Description:" Value="@Split.Settings.Description"/>
        <SplitItemLine Name="Link:" Value="@Split.Settings.DetailsUrl"/>
        <SplitItemLine Name="Image:" Value="@Split.Settings.ImageUrl"/>

        <SplitItemLine Name="Total Available:" Value="@((Split.Settings.TotalAvailable ?? 0).ToString())"/>
        @foreach (var size in Split.Settings.Sizes)
        {
            <MudChip Color="Color.Primary">@size</MudChip>
        }
    </MudCardContent>
</MudCard>


@code {

    [SuppressMessage("ReSharper", "NullableWarningSuppressionIsUsed")]
    [Parameter] [EditorRequired]
    public BottleSplit Split { get; set; } = default!;

}
