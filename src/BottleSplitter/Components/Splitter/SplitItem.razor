@using System.Diagnostics.CodeAnalysis
@using BottleSplitter.Model

<MudCard>
    <MudCardContent>
        <MudStack Row="true" Class="pa-1">
            <MudText Class="pa-2">Name:</MudText>
            <MudDivider Vertical="true"/>
            <MudText Class="pa-2">@Split.Name</MudText>
        </MudStack>
        <MudDivider />
        <MudStack Row="true" Class="pa-1">
            <MudText Class="pa-1">Url:</MudText>
            <MudDivider Vertical="true"/>
            <MudLink Class="pa-1" Href="@($"/splits/{Split.Squid}")">@Split.Squid</MudLink>
        </MudStack>
        <SplitItemLine Name="Description:" Value="@Split.Description"/>
        <SplitItemLine Name="Link:" Value="@Split.DetailsUrl"/>
        <SplitItemLine Name="Imag:e" Value="@Split.ImageUrl"/>
    </MudCardContent>
</MudCard>


@code {

    [SuppressMessage("ReSharper", "NullableWarningSuppressionIsUsed")]
    [Parameter] [EditorRequired] public BottleSplit Split { get; set; } = default!;

}
