@typeparam T
@if (Value is not null)
{
    <MudStack Row="true" Class="pa-1">
        <MudText>@Name</MudText>
        @if (Type == SplitItemType.Link)
        {
            <MudLink Href="@Link">@(Value.ToString() ?? "<No Value>")</MudLink>
        }
        else
        {
            <MudText>@(Value.ToString() ?? "<No Value>")</MudText>
        }
    </MudStack>
}

@code {

    [Parameter] [EditorRequired] public string Name { get; set; } = string.Empty;
    [Parameter] [EditorRequired] public T? Value { get; set; }
    [Parameter] public string? Link { get; set; }
    [Parameter] public SplitItemType Type { get; set; } = SplitItemType.Text;


}
